ZSH=$HOME/.oh-my-zsh
ZSH_THEME="agnoster"

HIST_STAMPS="dd.mm.yyyy"

plugins=(
  git
  tmux
  zsh-syntax-highlighting
  history
  z
  zsh-autosuggestions
  poetry
  colored-man-pages
  dotenv
)

source $ZSH/oh-my-zsh.sh

# remap CAPS_LOCK to CTRL
/usr/bin/setxkbmap -option "ctrl:nocaps,caps:ctrl_modifier"

pathappend() {
  declare arg
  for arg in "$@"; do
    test -d "$arg" || continue
    PATH=${PATH//":$arg:"/:}
    PATH=${PATH/#"$arg:"/}
    PATH=${PATH/%":$arg"/}
    export PATH="${PATH:+"$PATH:"}$arg"
  done
} && export pathappend

pathprepend() {
  for arg in "$@"; do
    test -d "$arg" || continue
    PATH=${PATH//:"$arg:"/:}
    PATH=${PATH/#"$arg:"/}
    PATH=${PATH/%":$arg"/}
    export PATH="$arg${PATH:+":${PATH}"}"
  done
} && export pathprepend

# remember last arg will be first in path
pathprepend \
  /usr/local/bin \
  "$HOME/.local/bin" \
  "$SCRIPTS" \
  "$HOME/.npm-global/bin" \
  "$HOME/.arkade/bin" \
  "$HOME/.ds/bin" \
  "$HOME/.platformio/penv/bin" \
  "/var/lib/flatpak/exports/share"

pathappend \
  /usr/local/bin \
  /usr/local/sbin \
  /usr/sbin \
  /usr/bin \
  /snap/bin \
  /sbin \
  /bin
  #/usr/local/go/bin \
